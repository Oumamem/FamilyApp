{% extends 'base1.html.twig' %}

{% block title %}Hello FamilleController!{% endblock %}

{% block body %}

<div class="container content">

   <div class="row">
       <div class="card card-register mx-auto mt-5 col-md-8">
           <div class="card-header">Bonjour Famille, Connectez vous</div>
           <div class="card-body">
               <form method="post">
               {% if error %}
                   <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
               {% endif %}

               {% if app.user %}

                   <div class="mb-3">
                       You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                   </div>
               {% endif %}

                   <div class="form-group">
                       <div class="form-row">

                           <div class="col-md-5">
                               <div class="form-label-group">
                                   <label for="inputUsername" >

                                   </label><input type="text" value="{{last_username}} " name="username" id="inputUsername" class="form-control" required autofocus>

                               </div>
                           </div>

                       </div>
                   </div>
               



                   <div class="form-group">
                       <div class="form-row">
                           <div class="col-md-5">
                               <div class="form-label-group">
                                   <input type="password" name="password" id="inputPassword" class="form-control" required>
                                </div>
                           </div>
                      
                       </div>
                   </div>
               <div class="form-group">
                   <div class="form-row">

                       <input type="hidden" name="_csrf_token"
                              value="{{ csrf_token('authenticate') }}">

                   </div>
               </div>

               <button class="btn btn-lg btn-primary" type="submit">
                   Sign in
               </button>
               </form>
               <div class="text-center">
                   <a class="d-block medium" href="forgot-password.html">Mot de passe oubli√©?</a>
               </div>
           </div>
       </div>
   </div>

</div>

{% endblock %}
